<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TunisiaPrayer.Views.test">
    <ContentPage.Content>
        <Grid ColumnDefinitions="*,2*,2*,*" RowDefinitions="5*,*,*,*,5*">
            <Label Text="Select where you live" Grid.Column="1" Grid.Row="1" TextColor="Black"/>

            <Label Text="State" Grid.Column="1" Grid.Row="2" TextColor="Black"/>
            <Picker Title="select State" x:Name="statePicker" Grid.Column="1" Grid.Row="3" BackgroundColor="Black" SelectedIndex="{Binding SelectedState}"/>
            <Label Text="Delegate" Grid.Column="2" Grid.Row="2" TextColor="Black"/>
            <Picker Title="select Delegate" x:Name="delegatePicker" Grid.Column="2" Grid.Row="3" BackgroundColor="Black"/>
        </Grid>

    </ContentPage.Content>
</ContentPage>